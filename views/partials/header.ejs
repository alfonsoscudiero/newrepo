<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a> 
  </span>

    <div id="tools">
      <% if (locals.loggedin && locals.accountData) { %>
        <% /* User IS logged in */ %>
          <span class="welcome-text">Welcome </span><a href="/account/"><%= locals.accountData.account_firstname %><span class="separator"> | </a>
        <a
          href="/account/logout">
          Logout
        </a>
      <% } else { %>
        <% /* User is NOT logged in - show original My Account link */ %>
        <a href="/account/login">My Account</a>
      <% } %>
  </div>
</header>