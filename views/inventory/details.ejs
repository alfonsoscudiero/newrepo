<!-- views/inventory/details.ejs -->
<section id="inv-detail">
  <h1><%= title %></h1>


  <div class="vehicle-detail-container">
    <!-- Vehicle Image -->
    <div class="vehicle-image">
      <img src="<%= vehicle.inv_image %>" alt="Image of <%= vehicle.inv_make %>">
    </div>

    <!-- Vehicle Specs -->
    <div class="vehicle-specs">
      <ul>
        <li><strong>Price: </strong>$<%= vehicle.inv_price.toLocaleString() %></li>
        <li><strong>Decription: </strong><%= vehicle.inv_description %></li>
        <li><strong>Color: </strong><%= vehicle.inv_color %></li>
        <li><strong>Miles: </strong><%= vehicle.inv_miles.toLocaleString() %></li>
      </ul>
    </div>
  </div>

<!-- Error Link -->
  <div>
    <a href="#" id="error-linl">Error Link</a>
  </div>

</section>