<!-- views/account/login.ejs -->

<h1><%= title %></h1>

<!-- Flash message (renders only if something was sent) -->
<%- messages() %>

<section class="card auth-card">
  <h2>Account Login</h2>
  <div class="auth-card-wrapper">
    <form id="loginForm" class="form auth-form" action="/account/login" method="post">
      <div class="form-row">
        <label for="account_email">Email:</label>
        <input 
          type="email" 
          id="account_email" 
          name="account_email" 
          autocomplete="username" 
          placeholder="youremail@example.com" 
          value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" 
          required
        >
      </div>

      <div class="form-row">
        <label for="account_password">Password:</label>
        <input 
          type="password"
          id="account_password"
          name="account_password"
          autocomplete="current-password"
          placeholder="Your password"
          pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
          title="Must be at least 12 characters, include 1 capital letter, 1 number, and 1 special character"
          required
        >
      </div>

      <button type="submit" class="btn primary">SIGN IN</button>
    </form>

    <p class="create-account">
      No acocunt?
      <a href="/account/register" class="new-account">Sign-up</a>
    </p>
  </div>

</section>